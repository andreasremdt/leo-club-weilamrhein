---
import { getCloudinaryUrl } from "../helpers";

export interface Props {
  src: string;
  category: string;
  alt: string;
  width: number;
  height?: number;
  class?: string;
  loading?: "eager" | "lazy";
}

const { src, category, alt, width, height, class: className, loading = "lazy" } = Astro.props;
const url = `${category}/${src}`;
---

<picture class="picture">
  <source srcset={getCloudinaryUrl(url, "avif", width, height)} type="image/avif" />
  <source srcset={getCloudinaryUrl(url, "webp", width, height)} type="image/webp" />
  <img
    src={getCloudinaryUrl(url, "jpg", width, height)}
    width={width}
    height={height}
    alt={alt}
    loading={loading}
    decoding="async"
    class={className}
  />
</picture>

<style>
  .picture {
    display: contents;
  }
</style>
