---
import { getCloudinaryUrl } from "@/lib/helpers";

export interface Props {
  src: string;
  category: string;
  alt: string;
  width: number;
  height?: number;
  class?: string;
  bordered?: boolean;
  loading?: "eager" | "lazy";
}

const {
  src,
  category,
  alt,
  width,
  height,
  class: className,
  bordered,
  loading = "lazy",
} = Astro.props;
const url = `${category}/${src}`;
---

<picture class:list={["h-full", { bordered: bordered }]}>
  <source
    srcset={getCloudinaryUrl(url, "avif", width, height)}
    type="image/avif"
  />
  <source
    srcset={getCloudinaryUrl(url, "webp", width, height)}
    type="image/webp"
  />
  <img
    src={getCloudinaryUrl(url, "jpg", width, height)}
    width={width}
    height={height}
    alt={alt}
    loading={loading}
    decoding="async"
    class={className}
  />
</picture>
