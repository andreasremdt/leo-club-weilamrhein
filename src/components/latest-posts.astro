---
import { getPosts, formatDate } from "@/lib/utils";

const posts = await getPosts(2);
---

{
  posts.map((post) => (
    <article class="mb-4">
      <h4 class="mb-1 text-lg font-bold leading-tight text-stone-900 transition-colors hover:text-yellow-600">
        <a href={`/aktionen/${post.slug}`}>{post.data.title}</a>
      </h4>
      <time datetime={post.data.created_at.toISOString()}>
        Ver√∂ffentlicht am {formatDate(post.data.created_at)}
      </time>
    </article>
  ))
}
