---
import { getPosts, formatDate } from "@/lib/utils";

let posts = await getPosts(3);
---

{
  posts.map((post) => (
    <article class="mb-4" itemscope itemtype="https://schema.org/BlogPosting">
      <h3 itemprop="headline">
        <a
          itemprop="url"
          href={`/aktionen/${post.slug}`}
          class="font-serif text-lg font-bold leading-tight text-neutral-900 outline-none transition-colors hover:text-primary-900 focus-visible:text-primary-900 focus-visible:ring-4 focus-visible:ring-primary-900/20 dark:text-white dark:hover:text-primary-200 dark:focus-visible:text-primary-200 dark:focus-visible:ring-primary-200/20"
        >
          {post.data.title}
        </a>
      </h3>
      <time
        itemprop="datePublished"
        datetime={post.data.created_at.toISOString()}
        class="text-sm text-neutral-500 dark:text-neutral-400"
      >
        Ver√∂ffentlicht am {formatDate(post.data.created_at)}
      </time>
    </article>
  ))
}
