---
import type { HTMLAttributes } from "astro/types";
import Twigs from "@/components/twigs.astro";

export interface Props extends HTMLAttributes<"h1"> {
  as: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
}

const { class: className, as: Tag } = Astro.props;
---

<Tag class:list={["bg-stone-900 py-3", className]}>
  <Twigs variant="light">
    <slot />
  </Twigs>
</Tag>
