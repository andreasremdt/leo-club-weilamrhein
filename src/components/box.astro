---
export interface Props extends astroHTML.JSX.HTMLAttributes {
  variant?: "small" | "large";
  as?: keyof HTMLElementTagNameMap;
}

const { class: className, variant = "large", as = "section" } = Astro.props;
const Tag = as;
---

<Tag class:list={["box", variant, className]}>
  <slot />
</Tag>

<style>
  .box {
    background-color: white;
    box-shadow: 0 2px 4px hsla(0, 0%, 0%, 0.13);
    border-radius: 2px;
  }

  .box:is(.small) {
    padding: 1.5rem;
  }

  .box:is(.large) {
    padding: 1.5rem 4rem;
  }

  @media (max-width: 900px) {
    .box:is(.large) {
      padding: 1.5rem;
    }
  }
</style>
